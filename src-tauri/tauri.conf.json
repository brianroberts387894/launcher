{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ultrapro2-launcher",
  "version": "0.1.0",
  "identifier": "com.ultrapro2-launcher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UltraPro2 Launcher",
        "minWidth": 1200,
        "width": 1200,
        "minHeight": 800,
        "height": 800,
        "fullscreen": false,
        "theme": "Dark",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ]
  }
  
}
